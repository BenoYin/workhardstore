{
  "name": "notion-blog-integration",
  "version": "1.0.0",
  "description": "Integrate Notion with a blog website",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint backend/**/*.js",
    "lint:fix": "eslint backend/**/*.js --fix",
    "build:css": "tailwindcss build -i ./src/css/index.css -o ./public/css/index.css --minify",
    "prestart": "npm run build:css",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "@notionhq/client": "^2.2.14",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.15",
    "eslint": "^8.48.0",
    "husky": "^8.0.3",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3"
  }
}

